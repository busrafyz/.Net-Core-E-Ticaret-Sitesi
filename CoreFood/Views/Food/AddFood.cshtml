@model CoreFood.Data.Models.Food
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<h1>Add Food</h1>

@using (Html.BeginForm("AddFood", "Food", FormMethod.Post))
{
    @Html.Label("Yiyecek Adı")
    @Html.TextBoxFor(x => x.FoodName, new { @class = "form-control" })
    <br />
    @Html.Label("Stok Adedi")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Resim Adresi")
    @Html.TextBoxFor(x => x.ImgUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>
}

