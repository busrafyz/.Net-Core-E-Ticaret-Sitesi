@model List<CoreFood.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<h2>Yiyecekler</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Yiyecek Adı</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Stok</th>
            <th scope="col">Bulunduğu Kategori</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
            <th scope="col">Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.FoodId</td>
                <td>@x.FoodName</td>
                <td>@x.Price</td>
                <td>@x.Stock</td>
                <td>@x.Category.CategoryName</td>
                <td><a href="#" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Food/DeleteFood/@x.FoodId" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-primary">Detaylar</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="AddFood" class="btn btn-success">Yeni Yiyecek</a>


