@model CoreFood.Data.Models.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<h1>Add Category</h1>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.CategoryName, "", new { @style="color:red"})
    <br />
    <button class="btn btn-success">Kaydet</button>
}